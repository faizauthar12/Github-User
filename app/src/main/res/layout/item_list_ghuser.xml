<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/IV_GHUser_Avatar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TV_GHUser_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/IV_GHUser_Avatar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.11"
        app:layout_constraintStart_toEndOf="@+id/IV_GHUser_Avatar"
        app:layout_constraintTop_toTopOf="@+id/IV_GHUser_Avatar"
        app:layout_constraintVertical_bias="0.027"
        tools:text="@string/GHU_username" />

    <ImageView
        android:id="@+id/IV_GHUser_octo"
        android:layout_width="25dp"
        android:layout_height="23dp"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/github_ocotpus_vector"
        app:layout_constraintBottom_toBottomOf="@+id/IV_GHUser_Avatar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/TV_GHUser_username"
        app:layout_constraintTop_toBottomOf="@+id/TV_GHUser_username"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_octicons_mark_github" />

    <TextView
        android:id="@+id/TV_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:text="@string/user"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/IV_GHUser_octo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/IV_GHUser_octo"
        app:layout_constraintTop_toBottomOf="@+id/TV_GHUser_username"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>